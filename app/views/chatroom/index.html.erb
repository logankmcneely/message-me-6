<div class="ui container" id="chatroom-container">

  <h4 class="ui center aligned medium icon header" id="homepage-header">
    <i class="circular fc-orange coffee icon"></i>
    Say Hi
  </h4>

  <div class="ui centered stackable grid" id="chatbox-container">
    <div class="twelve wide column">
      <div class="ui fluid raised card" id="chatbox">
        <div class="content" id="messages">

          <div class="ui small feed" id="message-container">
            <%= render @messages %>
          </div>

          <div class="ui dropdown item" id="users-dropdown">
            <i class="user icon"></i><i class="dropdown icon"></i>
            <%= render  "users_menu" %>
          </div>
          
        </div>

        <div class="extra content">
          <%= form_for(@message, html: { class: "ui reply form", role: "form", autocomplete: "off" }, url: message_path, remote: true) do |f| %>
            <div class="field">
              <div class="ui fluid icon input">
                <%= f.text_field :body %>
                <%= f.button '<i class="bordered inverted orange large icon paper plane"></i>'.html_safe,
                  id: "message-submit-button" %>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>

    <div class="four wide column">
      <%= render  "users_menu" %>
    </div>

  </div>
</div>
