<div class="ui inverted small menu" id="nav-bar-container">
  <%= link_to root_path, class: "item" do %>
    <i class="coffee icon fc-orange"></i>Chatroom
  <% end %>
  <a class="item">
    <i class="envelope outline icon fc-orange"></i>Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if logged_in? %>
          <%= link_to  "Logout", logout_path, method: :delete, class: "item" %>
        <% else %>
          <%= link_to  "Login", login_path, class: "item" %>
        <% end %>
      </div>
    </div>
    <div class="item">
      <% if logged_in? %>
        <%= link_to  "Logout", 
          logout_path, 
          method: :delete, 
          class: "ui primary button bgc-orange",
          id: "nav-bar-signin-button" %>
      <% else %>
        <%= link_to  "Sign In/Up", 
        login_path, 
        class: "ui primary button bgc-orange", 
        id:"nav-bar-signin-button" %>
      <% end %>
    </div>
  </div>
</div>
